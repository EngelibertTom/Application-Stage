{% extends 'admin/base.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item" aria-current="page"><a href="{{ path('app_admin_greenhouse_list') }}"> Positions </a>
    </li>
    <li class="breadcrumb-item" aria-current="page"><a href="{{ path('app_admin_columnrow_list') }}"> Rangs </a>
    </li>
    <li class="active breadcrumb-item" aria-current="page"> Nouveau </li>
{% endblock %}

{% set nbTableColumn = (nbTableColumn is defined and nbTableColumn) or nbTableColumn is not defined %}

{% block body %}
    {% if nbTableColumn %}
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header card-header-info">
                        <h4 class="card-title">
                            <i class="material-icons">create</i>
                            Ajouter une nouveau rang
                        </h4>
                    </div>
                    <div class="card-body p-3">

                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <a href="{{ path('app_admin_columnrow_list') }}">
                                    <i class="material-icons">keyboard_backspace</i> Retour Ã  la liste
                                </a>
                            </div>
                        </div>

                        {{ form_start(form) }}

                        <div class="row">
                            <div class="col-md-2">
                                {{ form_row(form.name) }}
                            </div>
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    {% else %}
        {% include 'admin/position/_includes/_not_found_table_column.html.twig' %}
    {% endif %}
{% endblock %}
