{% extends 'admin/base.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item" aria-current="page"><a href="{{ path('app_admin_greenhouse_list') }}"> Serres </a></li>
    <li class="active breadcrumb-item" aria-current="page"> Nouveau </li>
{% endblock %}

{% set nbNursery = (nbNursery is defined and nbNursery) or nbNursery is not defined %}

{% block body %}

    {% if nbNursery %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-info">
                    <h4 class="card-title">
                        <i class="material-icons">create</i>
                        Ajouter une nouvelle serre
                    </h4>
                </div>
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <a href="{{ path('app_admin_greenhouse_list') }}">
                                <i class="material-icons">keyboard_backspace</i> Retour Ã  la liste
                            </a>
                        </div>
                    </div>

                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-md-3">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-md-3">
                            {{ form_row(form.nursery) }}
                        </div>
                        <div class="col-md-3">
                            {{ form_row(form.location) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-4">
                            {{ form_row(form.cultureTables) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-success" type="submit"> <i class="material-icons">save</i> Enregistrer </button>

                            {% if greenhouse is defined %}
                                <a href="{{ path('app_admin_greenhouse_detail', { id: greenhouse.id }) }}" class="btn btn-primary">
                                    <i class="material-icons">visibility</i> Detail
                                </a>
                            {% endif %}
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {% else %}
        {% include 'admin/position/_includes/_not_found_nursery.html.twig' %}
    {% endif %}

{% endblock %}
