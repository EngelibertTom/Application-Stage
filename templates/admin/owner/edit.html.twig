{% extends 'admin/base.html.twig' %}
{% import "admin/macros/modals.html.twig" as modals %}
{% import _self as formMacros %}

{% block breadcrumb %}
    <li class="breadcrumb-item" aria-current="page"><a href="{{ path('app_admin_owner_list') }}"> Adoptants </a></li>
    <li class="active breadcrumb-item" aria-current="page"> Nouveau </li>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-info">
                    <h4 class="card-title">
                        <i class="material-icons">create</i>
                        Ajouter un adoptant
                    </h4>
                </div>
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <a href="{{ path('app_admin_owner_list') }}">
                                <i class="material-icons">keyboard_backspace</i> Retour Ã  la liste
                            </a>
                        </div>
                    </div>

                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3">
                                    {{ form_row(form.name) }}
                                </div>
                                <div class="col-md-3">
                                    {{ form_row(form.email) }}
                                </div>
                                <div class="col-md-3">
                                    {{ form_row(form.phone) }}
                                </div>
                                <div class="col-md-3">
                                    {{ form_row(form.postalCode) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
