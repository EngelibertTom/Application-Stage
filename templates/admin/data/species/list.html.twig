{% extends 'admin/base.html.twig' %}
{% import "admin/macros/modals.html.twig" as modals %}

{% set title = 'Liste des espèces'|trans %}

{% block breadcrumb %}
    <li class="breadcrumb-item" aria-current="page"> <a href="{{ path('app_admin_species_list') }}"> Données </a> </li>
    <li class="active breadcrumb-item" aria-current="page"><a href="{{ path('app_admin_species_list') }}"> Espèces </a> </li>
{% endblock %}

{% block body %}
    {% include 'admin/data/_nav.html.twig' %}

    {% if nbSpecies %}
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('app_admin_species_add') }}" class="btn btn-info float-right">
                    <i class="material-icons">add_circle</i> Ajouter une espèce
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-info">
                        <h4 class="card-title "> Les espèces </h4>
                        <p class="card-category"> Liste des espèces d'arbre </p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="tableSpecies" class="table table-striped table-bordered nowrap">
                                <thead class=" text-primary">
                                    <tr>
                                        <th> Nom commun </th>
                                        <th> Nom latin </th>
                                        <th> Type de feuilles </th>
                                        <th> Statut UICN </th>
                                        <th> Validé </th>
                                        <th width="10%"> Actions </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="card">
                    <div class="card-header card-header-info">
                        Liste des espèces
                    </div>
                    <div class="card-body">
                        <h4 class="card-title"> Aucune espèce trouvée <br/>

                        </h4>

                        <a href="{{ path('app_admin_species_add') }}" type="button" class="btn btn-info">
                            <i class="material-icons">add_circle</i> {{ 'Ajouter une espèce'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
