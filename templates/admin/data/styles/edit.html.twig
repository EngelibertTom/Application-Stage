{% extends 'admin/base.html.twig' %}

{% set isEdit = style is defined ? true : false %}

{% block breadcrumb %}
    <li class="breadcrumb-item" aria-current="page"><a href="{{ path('app_admin_species_list') }}"> Données </a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_admin_style_list') }}"> Styles </a></li>
    <li class="active breadcrumb-item" aria-current="page"> {{ isEdit ? 'Éditer ' ~ style : 'Nouveau' }} </li>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-info">
                    <h4 class="card-title">
                        <i class="material-icons">create</i>
                        {% if isEdit %}
                            Editer {{ style }}
                        {% else %}
                            Ajouter un nouveau style
                        {% endif %}
                    </h4>
                </div>
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <a href="{{ path('app_admin_style_list') }}">
                                <i class="material-icons">keyboard_backspace</i> Retour à la liste
                            </a>
                        </div>
                    </div>

                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                        <div class="row">
                            <div class="col-md-4">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.description) }}
                            </div>
                        </div>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}
