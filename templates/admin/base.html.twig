<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('img/apple-icon.png') }}">
    <link rel="icon" type="image/png" href="{{ asset('img/favicon.png') }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title>
        Bonsaï la part du colibri
    </title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport'/>
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css"
          href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body>

<div class="wrapper">
    <div class="sidebar" data-color="azure" data-background-color="black" data-image="{{ asset('img/sidebar-5.jpg') }}">
        <div class="logo">
            <a href="{{ path('app_admin_dashboard') }}" class="simple-text logo-normal">
                Bonsaï la part du colibri
            </a>
        </div>

        {% include 'admin/_includes/_sidebar.html.twig' %}
        <div class="sidebar-background"></div>
    </div>
    <div class="main-panel">
        {% include 'admin/_includes/_navbar.html.twig' %}

        <div class="content">
            <div class="container-fluid">
                <nav class="" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}"> Accueil </a></li>
                        {% block breadcrumb %}{% endblock %}
                    </ol>
                </nav>

                {% for label, messages in app.flashes(['success', 'warning', 'danger']) %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}" role="alert">
                            {{ message | raw }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </div>
        </div>

        {% include 'admin/_includes/_footer.html.twig' %}
    </div>
</div>

{#{% include 'admin/_includes/_setting.html.twig' %}#}

<!--   Core JS Files   -->
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/core-js/2.4.1/core.js"></script>
    {{ encore_entry_script_tags('app') }}
{% endblock %}

</body>
</html>
