{% extends 'admin/base.html.twig' %}

{% block title %}Hello EquipementController!{% endblock %}

{% block body %}
    {% include 'admin/equipement/_nav.html.twig' %}
    <h1>Formulaire Prêt d'équipement</h1>

    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-12">
            <div class="row">

                <div class="col-md-3">
                    {{ form_row(form.utilisateur) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.equipement) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.date) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.commentaire) }}
                </div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Ajouter le prêt</button>

    {{ form_end(form) }}




{% endblock %}